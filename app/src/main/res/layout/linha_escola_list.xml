<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="15dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgEscolaL"
        android:layout_width="119dp"
        android:layout_height="103dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/school" />

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/deletarKids"
            android:layout_x="0dp"
            android:layout_y="30dp"
            android:text="Nome:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:layout_x="51dp"
            android:layout_y="30dp"
            android:text="Nome"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:layout_x="0dp"
            android:layout_y="59dp"
            android:text="Emdereço:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/endeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/addKids"
            android:layout_alignStart="@+id/nomeText"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_x="74dp"
            android:layout_y="58dp"
            android:text="Endereço" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:layout_x="0dp"
            android:layout_y="84dp"
            android:text="Telefone:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tellText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/addKids"
            android:layout_alignStart="@+id/nomeText"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_x="66dp"
            android:layout_y="84dp"
            android:text="Telefone" />
    </AbsoluteLayout>



</LinearLayout>